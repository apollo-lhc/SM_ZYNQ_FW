[Unit]
Description=Status display generator
After=uio_daemon.service lighttpd.service
Requires=uio_daemon.service lighttpd.service

[Service]
Type=forking
PIDFile=/var/run/htmlStatus.pid
Restart=always
RestartSec=1
RuntimeMaxSec=12h
User=root
ExecStart=/opt/BUTool/bin/htmlStatus

[Install]
WantedBy=basic.target
